<h1> <%= @group.name %></h1>
<p>
	<%= link_to "Back to groups", groups_path %> |
	<%= link_to "Edit #{@group.name}", edit_group_path(@group) %> |
    <%= link_to "Delete #{@group.name}", group_path(@group), :method => :delete %>
</p>

<h3>Description</h3>
<p> <%= @group.description %></p>

<p> <%= @group.tags %></p>
<h3>Students</h3>
<ul>
	<% @group.students.each do |student| %>
	<li><%= student.email %></li>
	<% end %>
</ul>
<p><%= link_to "Back to groups", groups_path %></p>
