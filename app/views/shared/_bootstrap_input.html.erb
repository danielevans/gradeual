<div class="control-group">
  <%= form.label field, :class => "control-label" %>
  <div class="controls">
    <% if field == :email %>
      <%= form.email_field field %>
    <% elsif [:password, :password_confirmation, :current_password].include? field %>
      <%= form.password_field field %>
    <% else %>
      <%= form.text_field field %>
    <% end %>
  </div>
</div>
