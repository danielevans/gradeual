<%= form_for(resource,
      :url => resource.new_record? ? assignment_submissions_url(:assignment_id => resource.assignment_id) : resource_url(resource),
      :html => { :class => "form-horizontal", :method => (resource.new_record? ? "post" : "put") }) do |f| %>

  <% resource.attributes.each_pair do |field, value| %>
    <% next if ['response', 'id', 'created_at', 'updated_at', 'student_id', 'assignment_id'].include?(field) %>
    <%= render :partial => "shared/bootstrap_input", :locals => { :form => f, :field => field } %>
  <% end %>

  <div class="well">
    <p><%= simple_format resource.assignment.problem.description %></p>
  </div>

  <div class="control-group">
    <%= f.label :code, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :code, :class => "edit" %>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn btn-primary" name="commit" type="submit">Save</button>
    <%= link_to "Cancel", collection_url, :class => "btn" %>
  </div>
<% end %>
