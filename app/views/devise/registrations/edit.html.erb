

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <legend>Edit my <%= resource_name.to_s.humanize %> account</legend>
  <%= render :partial => "shared/bootstrap_input", :locals => { :field => :email, :form => f } %>
  <%= render :partial => "shared/bootstrap_input", :locals => { :field => :password, :form => f } %>
  <%= render :partial => "shared/bootstrap_input", :locals => { :field => :password_confirmation, :form => f } %>
  <%= render :partial => "shared/bootstrap_input", :locals => { :field => :current_password, :form => f } %>


  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update" %>
    </div>
    <div class="controls">
      <br>
      <%= render "devise/shared/links" %>
      <%= link_to "Back", :back %>
    </div>
  </div>
<% end %>



